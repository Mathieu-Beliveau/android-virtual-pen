{
    "id": "org.flatpak.virtualpen",
    "runtime": "org.kde.Platform",
     "runtime-version": "6.7",
    "sdk": "org.kde.Sdk",
    "command": "virtual-pen-linux-host",
    "finish-args": [
	"--socket=x11",
	"--socket=fallback-x11",
	"--socket=wayland",
	"--device=dri",
	"--filesystem=home",
	"--device=all",
	"--filesystem=/dev/uinput"
    ],    
    "modules":[
	{	    
	    "name": "virtualpenlinuxhost",
	    "buildsystem": "simple",
	    "build-commands": [
		"install -D virtual-pen-linux-host -t /app/bin/",
		"install -D libusb-1.0.so.0 -t /app/lib/",
		"install -Dm644 org.flatpak.virtualpen.desktop -t /app/share/applications/",
		"install -D org.flatpak.virtualpen.svg -t /app/share/icons/hicolor/scalable/apps/"
	    ],
	    "sources": [
		{
		    "type": "file",
		    "path": "org.flatpak.virtualpen.svg"		    
		},

		{
		    "type": "file",
		    "path": "virtual-pen-linux-host"		    
		},
		{
		    "type": "file",
		    "path": "libusb-1.0.so.0"		    
		},
		{
		    "type": "file",
		    "path": "org.flatpak.virtualpen.desktop"		    
		}
	    ]
	    
	}
    ]
}
