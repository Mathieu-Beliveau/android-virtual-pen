{
	"id": "io.github.androidvirtualpen.virtualpen",
	"runtime": "org.kde.Platform",
	"runtime-version": "6.7",
	"sdk": "org.kde.Sdk",
	"command": "virtual-pen-linux-host",
	"finish-args": [
		"--socket=wayland",
		"--socket=fallback-x11",
		"--share=ipc",
		"--device=all",
		"--share=network"
	],
	"modules": [
		"shared-modules/libusb/libusb.json",
		{
			"name": "virtualpenlinuxhost",
			"buildsystem": "cmake-ninja",
			"subdir": "virtual-pen-linux-host",
			"post-install": [
				"install -Dvm 644 ../flatpak/io.github.androidvirtualpen.virtualpen.metainfo.xml -t /app/share/metainfo",
				"install -Dvm 644 ../flatpak/io.github.androidvirtualpen.virtualpen.desktop -t /app/share/applications/",
				"install -Dvm 644 ../flatpak/io.github.androidvirtualpen.virtualpen.svg -t /app/share/icons/hicolor/scalable/apps/"
			],
			"sources": [
				{
					"type": "git",
					"url": "https://github.com/androidvirtualpen/virtualpen.git",
					"commit": "2fd62285c2ea14a8b2798d073a0d9506477620b8"
				}
			]
		}

	]
}